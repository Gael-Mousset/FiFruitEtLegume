{% extends 'base.html.twig' %}
{% block title %}{{ producteur.nom }} {{ producteur.prenom }}{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%;
            font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>{{ producteur.nom }} {{ producteur.prenom }}</h1>
        <p>{{ producteur.nomdelentreprise }}</p>
        <p>{{ producteur.adresse }}</p>
        <p>{{ producteur.telephone }}</p>
        <h3>Mes produits: </h3>
        <ul>
            {% for pdt in cesProduits %}
                <li style="list-style: none">{{ pdt.nom}}
                    <ul style="list-style: none">
                        <li>Description: {{ pdt.description }}</li>
                        <li>Type: {{ pdt.type }}</li>
                    </ul>
                </li>
                <p></p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}