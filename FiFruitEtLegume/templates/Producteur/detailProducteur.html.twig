{% extends 'base.html.twig' %}
{% block title %}{{ producteur.prenom }} {{ producteur.nom }}{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto;
            font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        .card #produit{ width: 15em; margin: 5px;}
        .card-body #produit a { width: 100%; background-color: #44a044 }
        .image {
            background-size: cover;
            width: 100%;
            height: 15em;
        }

        .image img {
            display: none;
        }
    </style>
    <div class="example-wrapper">
        <br>
        {% if producteur.nomdelentreprise == null %}
            <p> Bienvenue chez <strong>{{ producteur.prenom }} {{ producteur.nom }}</strong></p>
        {% else %}
            <p> Bienvenue chez <strong>{{ producteur.nomdelentreprise }} - {{ producteur.prenom }} {{ producteur.nom }}</strong></p>
        {% endif %}

        <img src="{{ asset(producteur.photo) }}"  class="d-inline-block align-top" alt="...">

        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Description
                        </button>
                    </h2>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <p>{{ producteur.description }}</p>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Information administrative
                        </button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        <p>
                            Adresse: {{ producteur.adresse }}
                            <br>
                            telephone: {{ producteur.telephone }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Mes produits
                        </button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        {% if not cesLegumes == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Légumes</h4>
                                </div>
                                {% for unLegume in cesLegumes %}
                                    <div class="card shadow-lg rounded" id="produit">
                                        <div class="image mr-3" style="background-image:url({{ unLegume.photo }});">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ unLegume.nom }}</h5>
                                            <p class="card-text">prix : {{ unLegume.prix }} €</p>
                                            <a href="/produit/{{ unLegume.nom }}" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesFruits == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Fruit</h4>
                                </div>
                                {% for unFruit in cesFruits %}
                                    <div class="card shadow-lg rounded" id="produit">
                                        <div class="image mr-3" style="background-image:url({{ unFruit.photo }});">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ unFruit.nom }}</h5>
                                            <p class="card-text">prix : {{ unFruit.prix }} €</p>
                                            <a href="/produit/{{ unFruit.nom }}" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesViandes == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Viande</h4>
                                </div>
                                {% for uneViande in cesViandes %}
                                    <div class="card shadow-lg rounded" id="produit">
                                        <div class="image mr-3" style="background-image:url({{ uneViande.photo }});">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ uneViande.nom }}</h5>
                                            <p class="card-text">prix : {{ uneViande.prix }} €</p>
                                            <a href="/produit/{{ uneViande.nom }}" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesPoissons == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Poisson</h4>
                                </div>
                                {% for unPoisson in cesPoissons %}
                                    <div class="card shadow-lg rounded" id="produit">
                                        <div class="image mr-3" style="background-image:url({{ unPoisson.photo }});">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ unPoisson.nom }}</h5>
                                            <p class="card-text">prix : {{ unPoisson.prix }} €</p>
                                            <a href="/produit/{{ unPoisson.nom }}" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesFruitDeMer == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Fruit de mer</h4>
                                </div>
                                {% for unFruitDeMer in cesFruitDeMer %}
                                    <div class="card shadow-lg rounded" id="produit">
                                        <div class="image mr-3" style="background-image:url({{ unFruitDeMer.photo }});">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ unFruitDeMer.nom }}</h5>
                                            <p class="card-text">prix : {{ unFruitDeMer.prix }} €</p>
                                            <a href="/produit/{{ unFruitDeMer.nom }}" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesFromages == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Fromages</h4>
                                </div>
                                {% for unFromage in cesFromages %}
                                    <div class="card shadow-lg rounded" id="produit">
                                        <div class="image mr-3" style="background-image:url({{ unFromage.photo }});">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">{{ unFromage.nom }}</h5>
                                            <p class="card-text">prix : {{ unFromage.prix }} €</p>
                                            <a href="/produit/{{ unFromage.nom }}" class="btn btn-primary">Go somewhere</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}