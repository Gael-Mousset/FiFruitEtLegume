{% extends 'base.html.twig' %}
{% block title %}{{ producteur.prenom }} {{ producteur.nom }}{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto;
            font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <br>
        {% if producteur.nomdelentreprise == null %}
            <p> Bienvenue chez <strong>{{ producteur.prenom }} {{ producteur.nom }}</strong></p>
        {% else %}
            <p> Bienvenue chez <strong>{{ producteur.nomdelentreprise }} - {{ producteur.prenom }} {{ producteur.nom }}</strong></p>
        {% endif %}

        <img src="grathis"  class="card-img-top" alt="...">

        <div class="accordion" id="accordionExample">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Description
                        </button>
                    </h2>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                    <div class="card-body">
                        <p>{{ producteur.description }}</p>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Information administrative
                        </button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                    <div class="card-body">
                        <p>
                            Adresse: {{ producteur.adresse }}
                            <br>
                            telephone: {{ producteur.telephone }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Mes produits
                        </button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
                    <div class="card-body">
                        {% if not cesLegumes == null %}
                            <div style="background-color: red; display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Légumes</h4>
                                </div>
                                {% for unLegume in cesLegumes %}
                                    <div class="card" style="width: 30%; margin: 10px;">
                                        <img src="grathis"  class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <p><strong>{{ unLegume.nom }}</strong></p>
                                            <br>
                                            <p>
                                                Quantité: {{ unLegume.quantite }}
                                                <br>
                                                Prix: {{ unLegume.prix }}
                                            </p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesFruits == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Fruit</h4>
                                </div>
                                {% for unFruit in cesFruits %}
                                    <div class="card" style="width: 30%; margin: 10px;">
                                        <img src="grathis"  class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <p><strong>{{ unFruit.nom }}</strong></p>
                                            <br>
                                            <p>
                                                Quantité: {{ unFruit.quantite }}
                                                <br>
                                                Prix: {{ unFruit.prix }}
                                            </p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesViandes == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Viande</h4>
                                </div>
                                {% for uneViande in cesViandes %}
                                        <div class="card" style="width: 30%; margin: 10px;">
                                            <img src="grathis"  class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <p><strong>{{ uneViande.nom }}</strong></p>
                                                <br>
                                                <p>
                                                    Quantité: {{ uneViande.quantite }}
                                                    <br>
                                                    Prix: {{ uneViande.prix }}
                                                </p>
                                            </div>
                                        </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if not cesPoissons == null %}
                            <div style="display: flex; flex-wrap: wrap;">
                                <div style="width: 100%; text-align: center; margin-top: 25px;">
                                    <h4>Poisson</h4>
                                </div>
                                {% for unPoisson in cesPoissons %}
                                    <div class="card" style="width: 30%; margin: 10px;">
                                        <img src="grathis"  class="card-img-top" alt="...">
                                        <div class="card-body">
                                            <p><strong>{{ unPoisson.nom }}</strong></p>
                                            <br>
                                            <p>
                                                Quantité: {{ unPoisson.quantite }}
                                                <br>
                                                Prix: {{ unPoisson.prix }}
                                            </p>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}