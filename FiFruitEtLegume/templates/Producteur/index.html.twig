{% extends 'base.html.twig' %}
{% block title %}Liste des producteurs{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        a{
            outline: none;
            text-decoration: none;
            color: black;
        }
        a:hover{color: #44a044}
        .image {
            background-size: cover;
            width: 150px;
            height: 150px;
        }

        .image img {
            display: none;
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des producteurs</h1>
        {% for pdct in producteurs %}
            <div class="media" style="background-color: #fff3ea">
                <div class="image mr-3 rounded-circle" style="background-image:url({{ pdct.photo }})"><img src="{{ pdct.photo }}" alt="" /></div>
                <div class="media-body">
                    <h5>{{ pdct.nomdelentreprise }} <br>
                        <a class="navbar-brand" href="/detailproducteur/{{ pdct.id }}">
                            {{ pdct.nom}} {{ pdct.prenom }}
                        </a>
                    </h5>
                    <p>{{ pdct.description }}</p>
                    <p>tel: {{ pdct.telephone }}</p>
                </div>
            </div>
            <br>
        {% endfor %}
    </div>
{% endblock %}

