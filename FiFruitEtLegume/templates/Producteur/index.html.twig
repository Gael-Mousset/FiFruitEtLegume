{% extends 'base.html.twig' %}
{% block title %}Liste des producteurs{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%;
            font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        a{
            outline: none;
            text-decoration: none;
            color: black;
        }
        a:hover{color: #44a044}
    </style>
    <div class="example-wrapper">
        <h1>Liste des producteurs</h1>
        <ul>
            {% for pdct in producteurs %}
                <li style="list-style: none">
                    <a class="navbar-brand" href="/detailproducteur/{{ pdct.id }}">
                        {{ pdct.nom}} {{ pdct.prenom }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
