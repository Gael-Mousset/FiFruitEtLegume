{% extends 'base.html.twig' %}
{% block title %}Liste des producteurs{% endblock %}
{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        a{
            color: darkgrey;
        }
        a:hover{
            color: limegreen;
        }

        .image {
            background-size: cover;
            width: 150px;
            height: 150px;
        }

        .image img {
            display: none;
        }
    </style>

    <div class="example-wrapper">

        <br>
        {% for pdct in producteurs %}
            <div class="media shadow-lg p-3 mb-5 bg-white rounded">
                <div>
                    <div class="image mr-3 rounded-circle" style="background-image:url({{ pdct.photo }}); margin-top: 15px; margin-left: 15px">
                        <img src="{{ pdct.photo }}" alt="" />
                    </div>
                    <div style=" width: 150px; margin-top: 10px; text-align: center">
                        <img src="location-icon" alt="" style="width: 30px; height: 30px; margin-right: -10px"/>
                        <a style="font-size: 15px; text-decoration: underline;" href="/">Situer sur la carte</a>
                        <br>
                        <a class="btn btn-success my-2 my-sm-0" role="button" href="/detailproducteur/{{ pdct.id }}" >Voir d√©tails</a>
                    </div>
                </div>

                <div class="media-body" style="margin-left: 20px">
                    <h5>
                        {% if not pdct.nomdelentreprise == null %}
                            {{ pdct.nomdelentreprise }}
                            <br>
                        {% endif %}
                        {{ pdct.nom}} {{ pdct.prenom }}
                    </h5>
                    <p>{{ pdct.description }}</p>
                    <p>tel: {{ pdct.telephone }}</p>
                </div>
            </div>
            <br>
        {% endfor %}
    </div>
{% endblock %}

