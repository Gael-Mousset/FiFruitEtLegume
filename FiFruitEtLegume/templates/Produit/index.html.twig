{% extends 'base.html.twig' %}

{% block title %}Page des produits{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5;  }
        .wrapper-produits { width: 100%; display: flex; flex-flow: row; flex-wrap: wrap;
            justify-content: center; align-items: flex-start;}
        .card { width: 15em; margin: 5px;}
        .card-body #produit a { width: 100%; background-color: #44a044 }
        .image { background-size: cover; width: 100%; height: 15em; }
        .image img { display: none; }
    </style>

    <div class="example-wrapper">
        <h1>Bienvenue dans la page des produits</h1>
    </div>
    <div class="wrapper-produits">

        {% for prd in produits %}
            <div class="card shadow-lg rounded">
                <div class="image mr-3" style="background-image:url({{ prd.photo }});">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ prd.nom }}</h5>
                    <p class="card-text">prix : {{ prd.prix }} â‚¬</p>
                    <a href="/detailProduit/{{ prd.id }}" class="btn btn-primary">Voir les details</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
